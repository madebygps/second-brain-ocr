# Azure Document Intelligence Configuration
AZURE_DOC_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOC_INTELLIGENCE_KEY=your_document_intelligence_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your_openai_key_here
# Embedding models: text-embedding-3-small (384 dims, cheapest), text-embedding-ada-002 (1536 dims), text-embedding-3-large (3072 dims)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-resource.search.windows.net
AZURE_SEARCH_KEY=your_search_admin_key_here
AZURE_SEARCH_INDEX_NAME=second-brain-notes

# Optional: Processing Configuration
BATCH_SIZE=10

# File Watching Configuration
# USE_POLLING=true: Checks directory every N seconds (default, reliable for Nextcloud)
# USE_POLLING=false: Event-based watching (instant detection, only for direct file additions)
USE_POLLING=true
POLLING_INTERVAL=180

# Optional: Webhook Notifications
# WEBHOOK_URL=https://ntfy.sh/your-topic
# WEBHOOK_URL=https://discord.com/api/webhooks/...
# WEBHOOK_URL=https://hooks.slack.com/services/...

# Logging Configuration
# LOG_LEVEL=INFO                              # DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_FORMAT=%(asctime)s [%(levelname)s] %(name)s: %(message)s
# LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
# LOG_TO_FILE=false                          # Enable file logging
# LOG_FILE_PATH=/app/data/second-brain-ocr.log
# LOG_FILE_MAX_SIZE=10                       # Max log file size in MB
# LOG_FILE_BACKUP_COUNT=3                    # Number of backup log files
# AZURE_LOG_LEVEL=WARNING                    # Azure SDK log level

# Timeout Configuration
# HTTP_TIMEOUT=10                            # HTTP request timeout in seconds
# AZURE_TIMEOUT=30                           # Azure service timeout in seconds

# Text Processing Configuration
# TEXT_CHUNK_MAX_TOKENS=8000                 # Maximum tokens per text chunk
# TEXT_CHUNK_OVERLAP=200                     # Token overlap between chunks

# Index Storage Optimization (Free Tier)
# MAX_CONTENT_LENGTH=1000                    # Max chars to store in index (saves 70% storage)

# File Detection Configuration
# FILE_DETECTION_DELAY=1.0                   # Delay after file detection (seconds)
